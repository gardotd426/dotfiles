;===============================================================
;	MPD                                                    =
;===============================================================

[module/mpd]
type = internal/mpd

; Host where mpd is running (either ip or domain name)
; Can also be the full path to a unix socket where mpd is running.
host = 127.0.0.1
port = 6600
;password = mysecretpassword

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2



; Available tags:
;   <label-song> (default)
;   <label-time>
;   <bar-progress>
;   <toggle> - gets replaced with <icon-(pause|play)>
;   <toggle-stop> - gets replaced with <icon-(stop|play)>
;   <icon-random>
;   <icon-repeat>
;   <icon-repeatone> (deprecated)
;   <icon-single> - Toggle playing only a single song. Replaces <icon-repeatone>
;   <icon-consume>
;   <icon-prev>
;   <icon-stop>
;   <icon-play>
;   <icon-pause>
;   <icon-next>
;   <icon-seekb>
;   <icon-seekf>
;format-online =  "<label-song>   <icon-prev>  <icon-stop>  <toggle>  <icon-next>"
;format-online =  "<label-song>  <bar-progress>"
format-online =  %{F#00000000}%{F-} %{F#D943C8} %{F-} "<label-song>"<bar-progress><icon-prev><icon-stop><toggle><icon-next>
icon-prev = %{F#62BBD3} %{F-}
icon-stop = %{F#62BBD3}  %{F-}
icon-play = %{F#aaD943C8}  %{F-}
icon-pause = 
icon-next = %{F#62BBD3}  %{F-}
label-song-maxlen = 40
label-song-ellipsis = true
bar-progress-width = 8
bar-progress-indicator = %{F#aaD943C8}%{F-}
bar-progress-indicator-font = 1
bar-progress-fill = ─
bar-progress-empty = ─
bar-progress-fill-font = 1
bar-progress-empty-font = 6
bar-progress-fill-foreground = #aaff77
bar-progress-fill-background = ${colors.background}
bar-progress-indicator-foreground = ${colors.foreground}
format-online-foreground = ${colors.foreground}
format-online-background = ${colors.background}


;==============================================
;	BROWSERMEDIACONTROL
;=============================================
[module/bmc]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#compton
type = custom/script
exec = ~/.config/polybar/scripts/browsermediacontrol
scroll-up = ~/.config/polybar/scripts/browsermediacontrol --volume 1
scroll-down = ~/.config/polybar/scripts/browsermediacontrol --volume -1 
interval = 0.1
format-foreground = ${colors.highback}
format-font = 2
format-background = ${colors.highlight}
format-prefix = %{T28} %{T-}
format-prefix-background = ${colors.background}
format-prefix-foreground = ${colors.highlight}
;format-suffix = %{T28} %{T-}
;format-suffix-foreground = ${colors.highlight}
;format-suffix-background = ${colors.background}

##############################################333
#			release
##########################################
[module/release]
type = custom/script
exec = (lsb_release -d | awk {'print $2'} ;echo " "; lsb_release -r | awk {'print $2'}) | tr -d '\n'
interval = 6000

format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = %{T23}%{T-}
format-prefix-foreground = #12FB3E
format-underline = #62FF00




#################################################
#					kernel
#################################################
[module/kernel]
type = custom/script
exec = echo $(uname -r)
interval = 10000
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = %{T23} %{T-}
format-prefix-foreground = ${colors.foreground}
format-underline = #62FF00
