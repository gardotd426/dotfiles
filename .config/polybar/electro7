label-connected = "%{T1}﴿%{T-}  %{T3}%{T-} %downspeed:% %{T3}%{T-} %upspeed:%"
label-disconnected = "%{T1}%{F#1D1F21}﴿%{F- T-}"

;=====================================================
;   module/date
;=====================================================
[module/date]
type = internal/date
inherit = section/base
interval = 1
date = %a %d %b

label = %{T1}%{T-} %date%
;format-suffix = %{T2}%{T-}
;=====================================================
;   module/time
;=====================================================
[module/time]
type = internal/date
interval = 1
time = %I:%M

format-prefix = %{T2}%{T-}
format-prefix-foreground = 292929
;format-prefix-background = FCBA7D
format-prefix-background = ${colors.highback}
format-foreground = ${colors.foreground}
format-background = 292929

label = " %time%    "

