;=====================================================
;   module/updates
;=====================================================
[module/updates]
type = custom/script
inherit = section/base

format-prefix = %{T2}%{T-}
;format-prefix-foreground = #007DEE
format-prefix-foreground = ${colors.warn}
format-prefix-background = ${colors.background}
format-foreground = ${colors.foreground}
;format-background = #007DEE
format-background = ${colors.warn}
format-suffix = %{T2}%{T-}
format-suffix-foreground = ${colors.highback}
;format-suffix-background = #007DEE
format-suffix-background = ${colors.warn}
label-padding = ${variables.label-padding}

exec = ~/.config/polybar/scripts/check-all-updates.sh
interval = 600
label = %{T26}%{T-} %{T1}%output%%{T-}

