[bar/primary]
inherit = bar/top_ancestor
monitor = ${env:MONITOR:DVI-D-0}
modules-left = date powermenu pulseaudio memory cpu
modules-right = i3
tray-position = left
tray-padding = 2

[bar/secondary]
inherit = bar/top_ancestor
monitor = ${env:MONITOR:HDMI-0}
modules-left = i3
modules-right = powermenu date

[module/i3]
type = internal/i3
format = <label-state>
;<label-mode>
strip-wsnumber = true
pin-workspaces = true
